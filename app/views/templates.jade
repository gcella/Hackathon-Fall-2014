script(type='text/template', id='eventTemplate').
    <div class="<% if (isEvent) {event}  %>announcement">
    <span><%= name %></span>
    <span class="club">Hosted By: <%= club %></span>
    <span class="time">On: <%= date %> at <%= moment(start_time) %></span>
    <% _.each(photos, function(photo){ %>
        <span><img src="<%= _.escape(photo) %>"></span>
    <% }); %>
    <span><%= description %></span>
    <span></span>
    <% if (freeFood) { %> <div class="freefood"></div> <% } %>
script(type='text/template', id='studentProfile').
    <div id="profpic">
        <img src="<%= photo_url %>", alt="<%= name %>">
    </div>
    <ul id="about">
        <li><%= name %></li>
        <li>Class of <%= year %></li>
    </ul>
    <h1>Your Clubs</h1>
    <ul id="student-clubs"><%= clubs %><ul>
    <a href="/clubs" alt="Browse All Clubs">Browse all clubs</a>
